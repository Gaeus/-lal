<div class="container-local center-form-user">
    <div class="container-edit-user-form">
    <div class="col">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: "Email", required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <%= f.input :nickname,
                      required: true,
                      label: "Pseudo",
                      input_html: { autocomplete: "nickname" } %>
          <%= f.input :first_name,
                      required: true,
                      label: "Prénom",
                      input_html: { autocomplete: "firstname" } %>
          <%= f.input :last_name,
                      required: true,
                      label: "Nom",
                      input_html: { autocomplete: "lastname" } %>
          <%= f.input :avatar, as: :file,
                      required: false,
                      label: "Avatar",
                      input_html: { autocomplete: "picture" } %>
          <%= f.input :is_public,
                      required: false,
                      label: "Identité secrète connue ?",
                      input_html: { autocomplete: "is_public?" } %>
          <%= f.input :password,
                      hint: "Laissez-le vide si vous ne souhaitez pas le modifier",
                      required: true,
                      label: "Mot de passe",
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      hint: "Laissez-le vide si vous ne souhaitez pas le modifier",
                      required: true,
                      label: "Confirmer le mot de passe",
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      hint: "Entrer votre mot de passe actuel pour confirmer vos changements",
                      required: true,
                      label: "Mot de passe actuel",
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", value:"Mettre à jour", class: "btn btn-primary mb-1" %>
        </div>
      <% end %>

      <div><%= button_to "Supprimer mon compte", registration_path(resource_name), class:"btn btn-danger" ,data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

      <%= link_to "Retour", :back %>

    </div>
  </div>
</div>
