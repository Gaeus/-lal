<div class="container-local center-form-signup">
    <div class="container-edit-signup-form">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "Email",
                    input_html: { autocomplete: "email" }%>
        <%= f.input :nickname,
                    required: true,
                    autofocus: true,
                    label: "Pseudo",
                    input_html: { autocomplete: "nickname" }%>
        <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    label: "Prénom",
                    input_html: { autocomplete: "lastname" }%>
        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    label: "Nom",
                    input_html: { autocomplete: "firstname" }%>
        <%= f.input :avatar, as: :file,
                    required: false,
                    autofocus: true,
                    label: "Avatar",
                    input_html: { autocomplete: "picture" }%>
        <%= f.input :password,
                    required: true,
                    label: "Mot de passe",
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: "Confirmer le mot de passe",
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :is_public,
                    required: false,
                    autofocus: true,
                    label: "Identité secrète connue ?",
                    input_html: { autocomplete: "is_public?" }%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-success" %>

        <br>
        <div class="btn btn-primary mt-1 text-white">
          <%= render "devise/shared/links", class:"text-white"%>
        </div>
      </div>
    <% end %>
    </div>
  </div>
